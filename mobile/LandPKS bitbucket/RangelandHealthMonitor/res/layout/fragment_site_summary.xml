<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
>
    
    <ScrollView 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    >
		<LinearLayout
			android:id="@+id/fragment_site_summary_scroll"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >
        
		    <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textAppearance="?android:attr/textAppearanceLarge"
			    android:text="@string/fragment_site_summary_site_summary_label"
		    />
		    
		    <LinearLayout 
		        android:id="@+id/fragment_site_summary_cover_area"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		        android:orientation="vertical"
		    >
			    <TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="15dp"
				    android:textAppearance="?android:attr/textAppearanceMedium"
				    android:text="@string/fragment_site_summary_landcover_label"
			    />
	
			    <LinearLayout
			        android:id="@+id/fragment_site_summary_landcover_total_cover_area"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:visibility="gone"
			    >	
				    <LinearLayout 
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
				        android:orientation="horizontal"
				    >
					    <TextView 
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_marginTop="10dp"
						    android:text="@string/fragment_site_summary_landcover_cover_label"
					    />
				    	<ImageView
					        android:id="@+id/fragment_site_summary_total_cover_help"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:onClick="onHelpClick"
					        android:src="@drawable/ic_menu_help"
					        android:contentDescription=""
					    />	
				    </LinearLayout>
				    <EditText
						android:id="@+id/fragment_site_summary_landcover_cover"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:editable="false"
					/>
				</LinearLayout>
			    
			    <LinearLayout
			        android:id="@+id/fragment_site_summary_landcover_bare_area"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:visibility="gone"
			    >    
				    <LinearLayout 
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
				        android:orientation="horizontal"
				    >
					    <TextView 
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_marginTop="10dp"
						    android:text="@string/fragment_site_summary_landcover_bare_label"
					    />
				    	<ImageView
					        android:id="@+id/fragment_site_summary_bare_ground_help"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:onClick="onHelpClick"
					        android:src="@drawable/ic_menu_help"
					        android:contentDescription=""
					    />		        
				    </LinearLayout>
					<EditText
						android:id="@+id/fragment_site_summary_landcover_bare"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:editable="false"
					/>
				</LinearLayout>
			    			    
			    <LinearLayout
			        android:id="@+id/fragment_site_summary_landcover_foliar_cover_area"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:visibility="gone"
			    >
				    <LinearLayout 
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
				        android:orientation="horizontal"
				    >
					    <TextView 
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_marginTop="10dp"
						    android:text="@string/fragment_site_summary_landcover_foliar_cover_label"
					    />
				    	<ImageView
					        android:id="@+id/fragment_site_summary_foliar_cover_help"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:onClick="onHelpClick"
					        android:src="@drawable/ic_menu_help"
					        android:contentDescription=""
					    />		        
				    </LinearLayout>		    
					<EditText
						android:id="@+id/fragment_site_summary_landcover_foliar_cover"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:editable="false"
					/>
				</LinearLayout>
			</LinearLayout>
			    				
		    		    		    
		    <LinearLayout
				android:id="@+id/fragment_site_summary_foliar_composition_area"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:visibility="gone"
			    android:orientation="vertical" >								    
			    <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
			        android:orientation="horizontal"
			    >
				    <TextView 
				        android:id="@+id/fragment_site_summary_foliar_cover_composition_label"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="15dp"
					    android:textAppearance="?android:attr/textAppearanceMedium"
					    android:text="@string/fragment_site_summary_foliar_cover_composition_label"
				    />
			    	<ImageView
				        android:id="@+id/fragment_site_summary_foliar_composition_help"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
				        android:onClick="onHelpClick"
				        android:src="@drawable/ic_menu_help"
				        android:contentDescription=""
				    />		        
			    </LinearLayout>		    			    		    		    
			</LinearLayout>

		    		    
			<LinearLayout
				android:id="@+id/fragment_site_summary_height_area"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical" >
			    <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
			        android:orientation="horizontal"
			    >
				    <TextView 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="15dp"
					    android:textAppearance="?android:attr/textAppearanceMedium"
					    android:text="@string/fragment_site_summary_canopy_height_label"
				    />
			    	<ImageView
				        android:id="@+id/fragment_site_summary_canopy_height_help"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
				        android:onClick="onHelpClick"
				        android:src="@drawable/ic_menu_help"
				        android:contentDescription=""
				    />		        
			    </LinearLayout>		    			    
			</LinearLayout>
		
		    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		        android:orientation="horizontal"
		    >
			    <TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textAppearance="?android:attr/textAppearanceMedium"
		        	android:layout_marginTop="15dp"
				    android:text="@string/fragment_site_summary_gaps_label"
			    />
		    	<ImageView
			        android:id="@+id/fragment_site_summary_gaps_help"
			        android:layout_width="wrap_content"
		        	android:layout_marginTop="10dp"
			        android:layout_height="wrap_content"
			        android:onClick="onHelpClick"
			        android:src="@drawable/ic_menu_help"
			        android:contentDescription=""
			    />		      
		    </LinearLayout>		    		    
			    
		    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		        android:orientation="horizontal"
		    >
			    <TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="10dp"
				    android:text="@string/fragment_site_summary_canopy_gaps_label"
			    />
			    <!--
		    	<ImageView
			        android:id="@+id/fragment_site_summary_canopy_gaps_help"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:onClick="onHelpClick"
			        android:src="@drawable/ic_menu_help"
			        android:contentDescription=""
			    />		    
			    -->    
		    </LinearLayout>		    
			<EditText
				android:id="@+id/fragment_site_summary_canopy_gap"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:editable="false"
			/>
			   	
		    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		        android:orientation="horizontal"
		    >
			    <TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="10dp"
				    android:text="@string/fragment_site_summary_basal_gaps_label"
			    />
			    <!--
		    	<ImageView
			        android:id="@+id/fragment_site_summary_basal_gaps_help"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:onClick="onHelpClick"
			        android:src="@drawable/ic_menu_help"
			        android:contentDescription=""
			    />		
			    -->        
		    </LinearLayout>		    
		    <EditText
				android:id="@+id/fragment_site_summary_basal_gap"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:editable="false"
			/>

		    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		        android:orientation="horizontal"
		    >		    
			    <TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
					android:layout_marginTop="15dp"
				    android:textAppearance="?android:attr/textAppearanceMedium"
				    android:text="@string/fragment_site_summary_species_density_label"
			    />
		    	<ImageView
			        android:id="@+id/fragment_site_summary_species_density_help"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
			        android:onClick="onHelpClick"
			        android:src="@drawable/ic_menu_help"
			        android:contentDescription=""
			    />		        
		    </LinearLayout>		    
		    
		    		    
		    <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dp"
			    android:text="@string/fragment_heightGapSpecies_species1Label"
		    />
			<EditText
				android:id="@+id/fragment_site_summary_species_1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:editable="false"
			/>
			   	
		    <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dp"
			    android:text="@string/fragment_heightGapSpecies_species2Label"
		    />
			<EditText
				android:id="@+id/fragment_site_summary_species_2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:editable="false"
			/>
								    		    								    		
		</LinearLayout>
	</ScrollView>									
</LinearLayout>
