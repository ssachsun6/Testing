<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- <style name="AppBaseTheme" parent="android:Theme.Light"> -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppBaseThemeDark" parent="@style/Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    	<item name="customMapIcon">@drawable/ic_action_map</item>
    	<item name="customListIcon">@drawable/ic_action_view_as_list</item>
    	<item name="customAddIcon">@drawable/ic_action_new</item>
    </style>

    <style name="AppThemeDark" parent="AppBaseThemeDark">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    	<item name="customMapIcon">@drawable/ic_action_map_dark</item>
    	<item name="customListIcon">@drawable/ic_action_view_as_list_dark</item>
    	<item name="customAddIcon">@drawable/ic_action_new_dark</item>
    </style>
    
